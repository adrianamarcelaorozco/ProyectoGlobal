{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": ".",
     "types": ["node", "@cucumber/cucumber", "@playwright/test"],
      "paths": {
        "*": ["*", "tests/*"]
      }
    },
    "include": ["**/*.ts"]
  }